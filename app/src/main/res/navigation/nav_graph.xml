<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SearchResultFragment">

    <fragment
        android:id="@+id/SearchResultFragment"
        android:name="jp.co.yumemi.android.code_check.SearchResultFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search_result">
        <action
            android:id="@+id/action_repositoriesFragment_to_repositoryFragment"
            app:destination="@id/twoFragment" />
    </fragment>

    <fragment
        android:id="@+id/twoFragment"
        android:name="jp.co.yumemi.android.code_check.TwoFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_two">
        <argument
            android:name="item"
            app:argType="jp.co.yumemi.android.code_check.item" />
    </fragment>

</navigation>
